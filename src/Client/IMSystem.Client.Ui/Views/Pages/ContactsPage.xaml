<Page
    x:Class="IMSystem.Client.Ui.Views.Pages.ContactsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:IMSystem.Client.Ui.Views.Pages"
    d:DataContext="{d:DesignInstance local:ContactsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <!-- 使用Grid作为根元素 -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="240" MaxWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧列表区域 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部搜索框和按钮 -->
            <Grid Grid.Row="0" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ui:TextBox 
                    Grid.Column="0"
                    PlaceholderText="搜索" 
                    Margin="0,0,5,0">
                    <ui:TextBox.Icon>
                        <ui:SymbolIcon Symbol="Search24"/>
                    </ui:TextBox.Icon>
                </ui:TextBox>
                
                <ui:Button 
                    Grid.Column="1"
                    Icon="Add24"
                    Appearance="Primary"
                    ToolTip="添加"/>
            </Grid>
            
            <!-- 选项卡切换 (好友/群组) -->
            <ui:TabView
                Grid.Row="1"
                SelectedIndex="{Binding ViewModel.ContactList.SelectedTabIndex, Mode=TwoWay}"
                >
                <ui:TabView.Items>
                    <ui:TabViewItem Header="好友"/>
                    <ui:TabViewItem Header="群聊"/>
                </ui:TabView.Items>
            </ui:TabView>
            
            <!-- 联系人列表 -->
            <ListView 
                Grid.Row="2" 
                ItemsSource="{Binding ViewModel.ContactList.CurrentItems, Mode=OneWay}" 
                SelectedItem="{Binding ViewModel.ContactList.SelectedItem}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border 
                                Width="40" 
                                Height="40" 
                                CornerRadius="20" 
                                Background="{DynamicResource ControlFillColorDefaultBrush}" 
                                Margin="0,0,10,0">
                                <TextBlock 
                                    Text="{Binding AvatarText}" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center" 
                                    FontWeight="Bold"/>
                            </Border>
                            <TextBlock 
                                Grid.Column="1" 
                                Text="{Binding DisplayName}" 
                                VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <!-- 分隔线 -->
        <GridSplitter 
            Grid.Column="1" 
            Width="5" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Stretch"
            Background="{DynamicResource ControlStrokeColorDefaultBrush}"/>
        
        <!-- 右侧联系人详情区域 -->
        <Grid Grid.Column="2" DataContext="{Binding ViewModel.ContactDetail}" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 联系人头像和基本信息 -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <Border
                    Width="80"
                    Height="80"
                    CornerRadius="40"
                    Background="{DynamicResource ControlFillColorDefaultBrush}">
                    <TextBlock
                        Text="{Binding AvatarText, Mode=OneWay}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="32"
                        FontWeight="Bold"/>
                </Border>
                <TextBlock
                    Text="{Binding DisplayName, Mode=OneWay}"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"/>
                <TextBlock
                    Text="{Binding StatusText, Mode=OneWay}"
                    Opacity="0.6"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- 详细信息 -->
            <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
                <StackPanel>
                    <!-- 好友资料或群信息，根据类型显示不同内容 -->
                    <ui:CardExpander
                        Icon="Person24"
                        Header="基本信息"
                        IsExpanded="True">
                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="账号" Grid.Column="0"/>
                                <TextBlock Text="{Binding AccountId, Mode=OneWay}" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="备注" Grid.Column="0"/>
                                <TextBlock Text="{Binding Remark, Mode=OneWay}" Grid.Column="1"/>
                            </Grid>
                            <Grid Margin="0,5" 
                                  Visibility="{Binding IsGroup, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="成员数" Grid.Column="0"/>
                                <TextBlock Text="{Binding MemberCount, Mode=OneWay}" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </ui:CardExpander>
                    
                    <ui:CardExpander
                        Icon="Info24"
                        Header="简介"
                        IsExpanded="True"
                        Margin="0,10,0,0">
                        <TextBlock 
                            Text="{Binding Description, Mode=OneWay}" 
                            TextWrapping="Wrap"/>
                    </ui:CardExpander>
                </StackPanel>
            </ScrollViewer>
            
            <!-- 底部按钮 -->
            <StackPanel 
                Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0">
                <ui:Button
                    Icon="Share24"
                    Content="分享"
                    Margin="0,0,10,0"/>
                <ui:Button
                    Icon="Chat24"
                    Content="发消息"
                    Appearance="Primary"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>