<Page
    x:Class="IMSystem.Client.Ui.Views.Pages.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:IMSystem.Client.Ui.Views.Pages"
    d:DataContext="{d:DesignInstance local:ChatPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <!-- 使用Grid作为根元素 -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="240" MaxWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧列表区域 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部搜索框和按钮 -->
            <Grid Grid.Row="0" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ui:TextBox 
                    Grid.Column="0"
                    PlaceholderText="搜索" 
                    Margin="0,0,5,0">
                    <ui:TextBox.Icon>
                        <ui:SymbolIcon Symbol="Search24"/>
                    </ui:TextBox.Icon>
                </ui:TextBox>
                
                <ui:Button 
                    Grid.Column="1"
                    Icon="Add24"
                    Appearance="Primary"
                    ToolTip="添加"/>
            </Grid>
            
            <!-- 聊天列表 -->
            <ListView 
                Grid.Row="1" 
                ItemsSource="{Binding ViewModel.ChatList.Items, Mode=OneWay}" 
                SelectedItem="{Binding ViewModel.ChatList.SelectedItem}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border 
                                Width="40" 
                                Height="40" 
                                CornerRadius="20" 
                                Background="{DynamicResource ControlFillColorDefaultBrush}" 
                                Margin="0,0,10,0">
                                <TextBlock 
                                    Text="{Binding AvatarText}" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center" 
                                    FontWeight="Bold"/>
                            </Border>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding LastMessage}" Opacity="0.6"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <!-- 分隔线 -->
        <GridSplitter 
            Grid.Column="1" 
            Width="5" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Stretch"
            Background="{DynamicResource ControlStrokeColorDefaultBrush}"/>
        
        <!-- 右侧聊天内容区域 -->
        <Grid Grid.Column="2" DataContext="{Binding ViewModel.ChatDetail}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 聊天标题栏 -->
            <Border Grid.Row="0" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}" 
                    Padding="15">
                <TextBlock Text="{Binding Title, Mode=OneWay}" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"/>
            </Border>
            
            <!-- 聊天记录区域 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Messages, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10,5"
                                    Padding="10"
                                    CornerRadius="6"
                                    Background="{Binding IsFromMe, Converter={StaticResource BoolToMessageBackgroundConverter}}"
                                    HorizontalAlignment="{Binding IsFromMe, Converter={StaticResource BoolToAlignmentConverter}}">
                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- 聊天输入区域 -->
            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ui:Button Grid.Column="0" 
                          Icon="Emoji24" 
                          Appearance="Transparent" 
                          Margin="0,0,10,0"/>
                
                <ui:TextBox Grid.Column="1" 
                           Text="{Binding InputText}" 
                           PlaceholderText="输入消息..." 
                           AcceptsReturn="True" 
                           TextWrapping="Wrap"
                           MinHeight="40"/>
                
                <ui:Button Grid.Column="2" 
                          Content="发送" 
                          Appearance="Primary" 
                          Command="{Binding SendCommand}" 
                          Margin="10,0,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</Page>